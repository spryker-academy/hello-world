<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Message\Persistence" package="src.Orm.Zed.Message.Persistence">

    <table name="pyz_message" idMethod="native" allowPkInsert="true">
        <column name="id_message" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="message" type="VARCHAR" size="255" required="true"/>

        <unique name="pyz_message_unique-message">
            <unique-column name="message"/>
        </unique>
        <behavior name="timestampable"/>


    </table>

</database>
